<div
  class="container-fluid"
  style="
    padding: 20px;
    
  "
>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <form
        action="/login"
        method="POST"
        style="
          width: 100%;
          
          box-shadow: 0.5px 0.5px 5px #252525;
          background-color: #fafafa;
          padding: 20px;
          border-radius: 5px;
        "
      >
        <h2 class="text-dark">Login</h2>

        <%- include('_login_form') %>
        <p class="mt-3">
          You don't have an account? <a href="/register">Register</a>
        </p>
        <% if (messages.error) { %>
        <div class="alert alert-danger mt-3" role="alert">
          <%= messages.error %>
        </div>
        <% } %>
      </form>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
