<div class="ht-head d-flex flex-row">
  <h6>
    <a href="/"><img class="back-key" src="/assets/previous.png" alt="" /></a>
  </h6>
  <h5>Reset Password</h5>
</div>
<div
  class="container-fluid"
  style="
    padding: 20px;
    display: flex;
    justify-self: center;
    align-items: center;
  "
>
  <form
    action="/password_reset"
    method="POST"
    style="
      width: 100%;
      height: 50%;
      box-shadow: 0.5px 0.5px 5px #252525;
      background-color: #fafafa;
      padding: 20px;
      border-radius: 5px;
    "
  >
    <%- include('_reset_form') %> <% if (locals.message) { %>
    <div class="alert alert-danger mt-3" role="alert">
      <%= locals.message %>
    </div>
    <% } %>
  </form>
</div>
<%- include('../layouts/menu.ejs') %>
